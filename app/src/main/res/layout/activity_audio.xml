<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:fitsSystemWindows="true"
    tools:context="com.example.andrzej.audiocontroller.activities.AudioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/audio_play_toolbar" />


        <include
            layout="@layout/content_audio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar" />

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_playlist_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingTop="?attr/actionBarSize"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout="@layout/fragment_playlist_drawer"
        android:name="com.example.andrzej.audiocontroller.fragments.PlaylistDrawerFragment"
        tools:layout="@layout/fragment_playlist_drawer" />


</android.support.v4.widget.DrawerLayout>