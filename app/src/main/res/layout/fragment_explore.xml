<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrzej.audiocontroller.fragments.ExploreFragment">

    <RelativeLayout
        android:id="@+id/navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/pathToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">


            <com.example.andrzej.audiocontroller.views.BlankingImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/image_button_background"
                android:paddingEnd="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingStart="2dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <HorizontalScrollView
                android:id="@+id/currentPathHorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="98"
                android:background="@drawable/explore_item_background"
                android:focusable="true"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/currentPathTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:paddingEnd="6dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="6dp"
                    android:paddingStart="2dp"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

            </HorizontalScrollView>

        </LinearLayout>

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/exploreProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pathToolbar"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigation_container"
        app:refreshColors="@array/gplus_colors"
        app:refreshType="ring">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/exploreRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.baoyz.widget.PullRefreshLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/expand_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/indigo"
        fab:fab_addButtonColorPressed="@color/indigo_pressed"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/rootBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/purple"
            fab:fab_colorPressed="@color/purple_pressed"
            fab:fab_icon="@drawable/ic_home_white_36dp"
            fab:fab_title="@string/root" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/changeViewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/purple"
            fab:fab_colorPressed="@color/purple_pressed"
            fab:fab_title="@string/change_explore_view" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
