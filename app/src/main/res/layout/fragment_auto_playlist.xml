<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.andrzej.audiocontroller.fragments.AutoPlaylistFragment">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_colorNormal="@color/indigo"
        fab:fab_colorPressed="@color/indigo_pressed"
        fab:fab_icon="@drawable/ic_save_white_36dp" />

    <TextView
        android:layout_centerInParent="true"
        android:text="PRZYKŁADOWY TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
